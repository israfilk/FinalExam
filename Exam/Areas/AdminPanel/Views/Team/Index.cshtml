@using Exam.Areas.AdminPanel.ViewModels
@model List<GetTeamVM>
@{
    int caunt = 0;
}


<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">  Table</h4>

                <div class="table-responsive">
                    <a class="btn btn-success" asp-action="create">
                        <p>Create</p>
                    </a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Count</th>
                                <th>Image.</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Setting</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetTeamVM getTeamVM in Model)
                            {
                                caunt++;
                                <tr>
                                    <td>@caunt</td>
                                    <td><img src="~/assets/images/@getTeamVM.Image" /></td>
                                    <td><p>@getTeamVM.Name</p></td>
                                    <td><p>@getTeamVM.RoleName</p></td>

                                    <td>

                                    <td>
                                       <form method="post">
                                            <button type="submit" class="btn btn-danger" asp-action="delete" asp-route-id="@getTeamVM.Id">Delete</button>
                                       </form>
                                        <a class="btn btn-warning" asp-action="update" asp-route-id="@getTeamVM.Id">
                                            <i class="mdi mdi-grease-pencil"></i>
                                        </a>
                                        <a class="btn btn-info" asp-action="detail" asp-route-id="@getTeamVM.Id">
                                            <i class="mdi mdi-information"></i>
                                        </a>
                                    </td>


                                    </td>
                                </tr>


                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
